<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/alarm_time_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:text="Time"
        android:gravity="center"
        android:textSize="@dimen/alarm_text_size"
app:layout_constraintBottom_toTopOf="@id/title_off"
        android:layout_marginBottom="50dp"
       />

    <TextView
        android:id="@+id/title_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_time"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:textSize="24sp"
        android:textColor="#000000"
        android:text="Title"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       />

    <TextView
        android:id="@+id/alarm_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_days"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"

        android:padding="10dp"
        android:background="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:layout_margin="50dp"
        android:textColor="#000000"
        android:text="Set Off Alarm"
        android:gravity="center
"
        app:layout_constraintTop_toBottomOf="@id/title_off"
       />
</androidx.constraintlayout.widget.ConstraintLayout>